# 1. Calendar
df_cal = spark.read.format('csv')\
    .option('header', 'true')\
    .option('inferSchema', 'true')\
    .load('abfss://bronze@eclasessgen2.dfs.core.windows.net/AdventureWorks_Calendar')

# 2. Customers
df_cus = spark.read.format('csv')\
    .option('header', 'true')\
